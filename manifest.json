{
    "manifest_version": 3,
    "name": "JSON Formatter",
    "version": "1.0",
    "description": "Extension for formatting JSON objects",
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "web_accessible_resources": [
      {
        "resources": ["lib/jsoneditor/*"],
        "matches": ["<all_urls>"]
      }
    ],
    "action": {
      "default_popup": "index.html",
      "default_icon": "logo.png"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self';"
    }
  }
  